{
	"extends": ["react-app", "react-app/jest"],
	"plugins": ["react-hooks"],
	"rules": {
		"no-console": "warn",
		"quotes": ["warn", "single"],
		"jsx-quotes": ["warn", "prefer-double"],
		"prefer-const": "warn",
		"max-len": ["warn", { "code": 120 }],
		"semi": ["warn", "always"],
		"import/order": [
			"warn",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				]
			}
		],
		"react-hooks/exhaustive-deps": "warn"
	}
}
